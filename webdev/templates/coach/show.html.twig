{% extends 'baseAdmin.html.twig' %}

{% block title %}Coach{% endblock %}

{% block param %}
    <h1>Coach</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ coach.username }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ coach.mail }}</td>
            </tr>
            <tr>
                <th>Date_n</th>
                <td>{{ coach.dateN ? coach.dateN|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn" onclick="location.href='{{ path('coach_index') }}'">  <i class="fa fa-reply"></i> </button>
<div class="col-offset-5">
    <button class="btn" onclick="location.href='{{ path('coach_edit', {'id': coach.id}) }}'" > <i class="fa fa-edit"> </i></button>


    {{ include('coach/_delete_form.html.twig') }}
{% endblock %}
