{{form_start(form,{'attr':{'novalidate':'novalidate'}})}}
    <div class="login-form-head" style="background: orange">
        <h4>Se connecter</h4>
        <p>Bonjour utilisateur, Connectez-vous et commencer a utiliser nos services</p>
    </div>
    <div class="login-form-body">
        <div class="form-gp">
            <label for="exampleInputEmail1">Nom de l'utilisateur</label>
            {{ form_widget(form.username) }}
            <i class="ti-email"></i>
            <div class="text-danger"></div>
        </div>
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.username) }}
        </div>
        <div class="form-gp">
            <label for="exampleInputPassword1">Mot de passe</label>
            {{ form_widget(form.password) }}
            <i class="ti-lock"></i>
            <div class="text-danger"></div>
        </div>
        <div class="text-xs font-weight-bold text-warning text-uppercase mb-2">
            {{ form_errors(form.password) }}
        </div>
        <div class="row mb-4 rmber-area">
            <div class="col-6">
                <div class="custom-control custom-checkbox mr-sm-2">
                    <input type="checkbox" class="custom-control-input" id="customControlAutosizing">
                </div>
            </div>
        </div>
        <div class="submit-btn-area">
            <button id="form_submit" type="submit">Connecter <i class="ti-arrow-right"></i></button>
        </div>
        <div class="form-footer text-center mt-5">
            <p class="text-muted">Vous n'avez pas de compte?<a href="{{ path('simplefront_new') }}">Enregistrer</a></p>
        </div>
    </div>
{{ form_end(form) }}


