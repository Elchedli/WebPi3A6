{% block title %}Simple{% endblock %}

{% block body %}
    <h1>Simple</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ simple.username }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ simple.mail }}</td>
            </tr>
