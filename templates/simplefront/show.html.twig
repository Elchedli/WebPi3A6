                <th>Date of birth</th>
                <td>{{ simple.dateN ? simple.dateN|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('simplefront_index') }}">back to list</a>


{% endblock %}
