{% extends 'basefront.html.twig' %}
{% block title %}
    <title>Reclamation</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free Website Template" name="keywords">
    <meta content="Free Website Template" name="description">
{% endblock %}
{% block contact %}
<div class="section-header text-center">
    <h2 class="bg-light py-4 text-info"> Your Selected Reclamation</h2>
</div>
    <table class="table">
        <tbody>
        {#   <tr>
               <th>IdRec</th>
                <td>{{ reclamation.idRec }}</td>
            </tr> #}
            <tr>
                <th>Username</th>
                <td>{{ reclamation.username }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ reclamation.objRec }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ reclamation.sujRec }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reclamation.etatRec }}</td>
            </tr>
        <tr>
            <th>Category</th>
            <td>{{ reclamation.idCat }}</td>
        </tr>
            <tr>
                <th>Date</th>
                <td>{{ reclamation.dateRec ? reclamation.dateRec|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
<center>
    <a class="btn btn-outline-success fas fa-reply-all" href="{{ path('reclamation_index') }}"> Back To List</a>
    <br>
    <br>
    <a class="btn btn-outline-warning fas fa-edit" href="{{ path('reclamation_edit', {'idRec': reclamation.idRec}) }}"> Edit</a>
    {{ include('Front/reclamation/_delete_form.html.twig') }}
</center>
{% endblock %}
