<div class="contact">
    <div class="container">
        <div class="section-header text-center">
            <h1 class="bg-light py-4 text-info"> Modifier Une Réclamation </h1>
        </div>
    </div>
    {% for message in app.flashes('info') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {{ include('Front/reclamation/_form.html.twig', {'button_label': 'Modifier'}) }}
    {{ include('Front/reclamation/_delete_form.html.twig', {'button_label': 'Update'}) }}
{% endblock %}
