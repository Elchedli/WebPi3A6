{% for message in app.flashes('info') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<form method="post" action="{{ path('reclamation_delete', {'idRec': reclamation.idRec}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.idRec) }}">
    <br>
    <button class="btn btn-outline-danger fas fa-trash"> Delete</button>
</form>
