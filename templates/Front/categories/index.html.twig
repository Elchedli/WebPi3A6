{#{% extends 'base.html.twig' %}#}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCat</th>
                <th>NomCat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.idCat }}</td>
                <td>{{ category.nomCat }}</td>
                <td>
                    <a href="{{ path('categories_show', {'idCat': category.idCat}) }}">show</a>
                    <a href="{{ path('categories_edit', {'idCat': category.idCat}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categories_new') }}">Create new</a>
{% endblock %}