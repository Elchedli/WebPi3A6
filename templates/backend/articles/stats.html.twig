{% extends 'backend2/page.html.twig' %}
{% block param %}
<center>


        <h1 style="font-size: 40px;color:#1d5987;">Statistiques : Article par Catégories</h1>
</center>
        <canvas id="articles" width="400" height="100"></canvas>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha512-s+xg36jbIujB2S2VKfpGmlC3T5V2TF3lY48DX7u2r9XzGzgPsa6wTpOQA7J9iffvdeBN0q9tKzRxVxw1JviZPg==" crossorigin="anonymous"></script>
    <script>
        let articles = document.querySelector("#articles")
        let catGraph = new Chart(articles, {
            type: "pie",
            data: {
                labels: {{ catType |raw}},
                datasets: [{
                    label: "Répartition des catégories",
                    data: {{ catCount| raw }},
                    backgroundColor:{{ catColor| raw}},
                }]
            }
        })
    </script>

{% endblock %}