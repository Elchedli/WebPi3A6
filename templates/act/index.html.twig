{% extends 'Front.html.twig' %}

{% block title %}Act index{% endblock %}

{% block Evenement %}
    <h1>Act index</h1>

    <table class="table">
        <thead>
            <tr>
                {#  <th>IdAct</th> #}
                <th>NomAct</th>
                <th>TypeAct</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for act in acts %}
            <tr>
                <td>{{ act.idAct }}</td>
                <td>{{ act.nomAct }}</td>
                <td>{{ act.typeAct }}</td>
                <td>
                    <a href="{{ path('act_show', {'idAct': act.idAct}) }}">show</a>
                    <a href="{{ path('act_edit', {'idAct': act.idAct}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('act_new') }}">Create new</a>
{% endblock %}
